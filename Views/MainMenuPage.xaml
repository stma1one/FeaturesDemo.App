<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FeaturesDemo.Views.MainMenuPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:FeaturesDemo.ViewModels"
    Title="{Binding Title}"
    x:DataType="viewmodels:MainMenuPageViewModel">
    <VerticalStackLayout Margin="15" Spacing="15">
        <Label
            HorizontalOptions="Center"
            Text="ברוכים הבאים למסך התפריט שלנו"
            VerticalOptions="Center" />
        <Button Command="{Binding NavConnectivityCommand}" Text="מסך חיבוריות" />
        <Button Command="{Binding NavSendSMSCommand}" Text="שליחת סמס" />

    </VerticalStackLayout>
</ContentPage>